<h1>Project Gallery</h1>
<% @projects.each do |project| %>
	<p>
		<% if project.image %>
			<%= image_tag project.image.image.url(:thumb) %>
			<br/>
		<% end %>
		<%= link_to project.title, public_project_url(project), :class=>'content_ajax' %><br/> 
		<%= project.description_short %><br/>
		Keywords: <%= render 'taglist', :tags => project.tags %>
	</p>
<% end %>

<%= link_to t("project_list"), public_projects_list_url, :class=>"content_ajax" %>

