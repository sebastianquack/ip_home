<p id="notice"><%= notice %></p>

<% if @project.image %>
  <%= image_tag @project.image.image.url %>
<% end %>

<h2><%= @project.title %></h2>

<p><%= @project.description_short %></p>

<p><%= @project.description_long %></p>

<ul>
  <li>Keywords: <%= render :partial=>'projects/taglist', :locals=>{:tags => @project.tags} %></li>
  <li>Year: <%= @project.year %></li>
  <li>Location: <%= @project.location %></li>
	<li>Client: <%= @project.client %></li>
  <li>Website: <%= link_to @project.website, @project.website %></li>	
</ul>

<% if @project.media_items %>
	Media Items:
	<ul>
		<% @project.media_items.each do |media_item| %>
		<li>
		<%= render :partial=>'media_items/show_single', :locals=>{:media_item=>media_item} %>
		</li>
		<% end %>
	</ul>
<% end %>