<% if @project.image %>
  <%= image_tag @project.image.image.url, :width=>@project.image.image_width, :height=>@project.image.image_height %>
<% end %>

<h1><%= @project.title %></h1>

<p><%= @project.description_short %></p>

<p><%= formatize @project.description_long %></p>

<ul>
  <!--li>Keywords: <%= render :partial=>'projects/taglist', :locals=>{:tags => @project.tags} %></li-->
  <li>Date: 
  	<% if @project.start_date %>
	  	<%=	l @project.start_date, :format=>:long %><% if @project.end_date %> - <%= l @project.end_date, :format=>:long %><% end %>
  	<% else %>
  		<%= @project.year %>
  	<% end %>
  <li>Location: <%= @project.location %></li>
  <% if @project.client? %>
		<li><%= t('local_partner') %>: <%= @project.client %></li>
	<% end %>
  <li>Website: <%= link_to @project.website, @project.website %></li>	
</ul>

